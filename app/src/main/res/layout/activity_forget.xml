<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp"
    tools:context=".login.LoginActivity">
<ImageView
    android:id="@+id/img_user"
    android:layout_marginTop="200dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_width="wrap_content"
    android:src="@drawable/ic_user"
    android:layout_height="wrap_content"></ImageView>
    <EditText
        android:layout_marginStart="10dp"
        android:id="@+id/user"
        android:hint="请输入用户名/手机号"
        app:layout_constraintStart_toEndOf="@+id/img_user"
        app:layout_constraintTop_toTopOf="@+id/img_user"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:background="@null"
        android:layout_height="28dp"></EditText>
    <View
        android:layout_width="match_parent"
        android:background="@color/grey2"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/img_user"
        android:layout_height="1dp"></View>


    <ImageView
        android:id="@+id/img_pass"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/img_user"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_pass"
        android:layout_height="wrap_content"></ImageView>
    <EditText
        android:layout_marginStart="10dp"
        android:id="@+id/pass"
        app:layout_constraintStart_toEndOf="@+id/img_pass"
        app:layout_constraintTop_toTopOf="@+id/img_pass"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:background="@null"
        android:hint="请输入新密码"
        android:inputType="textPassword"
        android:layout_height="28dp"></EditText>
    <View
        android:layout_width="match_parent"
        android:background="@color/grey2"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/img_pass"
        android:layout_height="1dp"></View>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:background="@drawable/ic_btnbg"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="忘  记  密  码"
        android:layout_height="38dp"
        tools:ignore="MissingConstraints" />



</androidx.constraintlayout.widget.ConstraintLayout>