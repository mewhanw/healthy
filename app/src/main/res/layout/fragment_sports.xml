<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:padding="10dp"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:text="运   动"
        android:textColor="@color/grey"
        android:layout_height="wrap_content"></TextView>
    <View
        android:background="@color/grey2"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/img_sport"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_sport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ImageView>
        <TextView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/img_sport"
            android:layout_marginBottom="30dp"
            android:text="消耗卡路里"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:id="@+id/sport"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/img_sport"
            app:layout_constraintTop_toTopOf="@+id/img_sport"
            android:layout_marginBottom="20dp"
            android:text="1550"
            android:textSize="48sp"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:text="点击开始运动"
        android:textSize="16sp"
        android:layout_marginStart="14dp"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"></TextView>
    <LinearLayout
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/paobu"
            android:layout_width="0dp"
            android:drawableTop="@drawable/ic_paobu"
            android:text="跑步"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:id="@+id/buhang"
            android:layout_width="0dp"
            android:drawableTop="@drawable/ic_buhang"
            android:text="步行"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:id="@+id/qixing"
            android:layout_width="0dp"
            android:drawableTop="@drawable/ic_zihangche"
            android:text="骑行"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"></TextView>



        <TextView
            android:id="@+id/tiaosheng"
            android:layout_width="0dp"
            android:drawableTop="@drawable/ic_tiaosheng"
            android:text="跳绳"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:id="@+id/yuqie"
            android:layout_width="0dp"
            android:drawableTop="@drawable/ic_yuqie"
            android:text="瑜伽"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/qiche"
            android:layout_width="0dp"
            android:drawableTop="@drawable/ic_qiche"
            android:text="动感单车"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:id="@+id/paobuji"
            android:layout_width="0dp"
            android:drawableTop="@drawable/paobuji"
            android:text="跑步机"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:id="@+id/hulaquan"
            android:layout_width="0dp"
            android:drawableTop="@drawable/ic_hulaquan"
            android:text="呼啦圈"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

</LinearLayout>